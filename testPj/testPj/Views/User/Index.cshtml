@{
    Layout = "_Layout";

}

<div class="main-container">
    <div class="pd-ltr-20">
        <div class="card" id="view">
            <div class="card-header bg-primary text-white" style=" font-size: 1rem; ">
                Quản lý tài khoản
            </div>
            <div class="card-body card-custom">
                <form id="formView" action="javascript:void(0)">
                    <div style="padding: 15px 0px;">
                        @* mở lại comment khi có quyền *@
                        @*@if (Utils.IsCheckPemission("M_UT", "PER_ADD") == true)
                            {
                                <a href="javascript:void(0);" onclick="openView(1,0)" class="btn btn-info">Thêm mới</a>
                            }*@
                        <a href="javascript:void(0);" onclick="openView(1,0)" class="btn btn-info">Thêm mới</a>
                        <a href="javascript:void(0);" class="btn btn-info" data-toggle="collapse" data-target="#collapseSearch" aria-expanded="true" aria-controls="collapseSearch"><i class="fa fa-search" aria-hidden="true"></i>Tìm kiếm</a>
                    </div>
                    <div class="collapse" id="collapseSearch" style="margin-top:5px">
                        <div class="col-md-12 row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group row">
                                    <label class="col-form-label col-lg-2" for="UserName">
                                        Tên tài khoản
                                    </label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="UserName" name="UserName" @*onchange="nameChange()"*@>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group row">
                                    <label class="col-form-label col-lg-2" for="IsActive">
                                        Trạng thái
                                    </label>
                                    <div class="col-lg-10">
                                        <select class="form-control" id="IsActive" @*onchange="IsActiveChange()"*@>
                                            <option value="-1">Tất cả</option>
                                            <option value="1">Hoạt động</option>
                                            <option value="0">Không hoạt động</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 mb-3 btn-search-custom">
                            <div style="text-align:center; ">
                                <a href="javascript:void(0)" class="btn btn-info" onclick="onSearch()">Tìm kiếm</a>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="table-responsive custom-table-scroll ">
                    <table id="userTypeTable" class="table table-striped table-bordered zero-configuration" style="width:100%">
                        <thead class="contain-header-custom m-gray">
                            <tr>
                                <th class="number1" style="text-align: center">STT</th>
                                <th class="number2" style="text-align: center">Tên người dùng</th>
                                <th class="number3" style="text-align: center">Tên tài khoản</th>
                                <th class="number4" style="text-align: center">Trạng thái hoạt động</th>
                                <th id="OptionUnitType" style="text-align: center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="contain-tbody-custom">
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-7"></div>
                    <div class="col-md-5">
                        <partial name="_Pagination" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card" id="create" style="display: none">
            <div class="card-header bg-primary text-white" id="frmHeaderCreate" style=" font-size: 1rem; ">
                Thêm mới
            </div>
            <div class="card-body card-custom">
                <form id="formCreate" class="form-valide" action="#" method="post" style="margin-top: 20px;">
                    <input type="hidden" id="Id" name="Id" value="0" />
                    <div class="row">
                        <div class="col-md-12 row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="nameCreate" class="col-form-label">17 <span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control required" id="nameCreate" name="nameCreate">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="statusCreate" class="col-form-label">16</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control" id="statusCreate" name="statusCreate">
                                            <option value="1" selected="selected">15</option>
                                            <option value="0">14</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 row mb-3 mt-3">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="descriptionCreate" class="col-form-label">Mô tả</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="descriptionCreate" name="descriptionCreate">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 row" style="display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start; width: 100%;">
                            <div style="width: 50%; display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start;">
                                <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                    <button type="button" class="btn btn-info" style="width: 100%" onclick="submitCreate();">Lưu</button>
                                </div>
                                <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                    <button type="button" class="btn btn-outline" style="width:100%" onclick="openView(0,0)">Trở lại</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card" id="detail" style="display: none">
            <div class="card-header bg-primary text-white" id="frmHeaderDetail" style=" font-size: 1rem; ">
                Chi tiết
            </div>
            <div class="card-body card-custom">
                <form id="formDetail" class="form-valide" action="#" method="post" style="margin-top: 20px;">
                    <input type="hidden" id="IdDetail" name="IdDetail" value="0" />
                    <div class="row">
                        <div class="col-md-12 row mb-3">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="NameDetail" class="col-form-label">13 <span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="nameUnitTypeDetail" name="nameUnitTypeDetail" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="StatusDetail" class="col-form-label">12</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select disabled class="form-control" id="StatusDetail" name="StatusDetail">
                                            <option value="1">11</option>
                                            <option value="0">10</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 row mb-3">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="CreatorNameDetail" class="col-form-label">9</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="CreatorNameDetail" name="CreatorNameDetail" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="CreatedAtDetail" class="col-form-label">8</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="CreatedAtDetail" name="CreatedAtDetail" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 row mb-3">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="EditorNameDetail" class="col-form-label">7</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="EditorNameDetail" name="EditorNameDetail" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="ModifiedAtDetail" class="col-form-label">6</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="ModifiedAtDetail" name="ModifiedAtDetail" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 row mb-3">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="DescriptionDetail" class="col-form-label ">5</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="DescriptionDetail" name="DescriptionDetail" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 row " style="display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start; width: 100%;">
                            <div style="width: 50%; display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start;">
                                <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                    <button type="button" class="btn btn-outline" style="width:100%" onclick="openView(0,0)">Trở lại</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card" id="edit" style="display: none">
            <div class="card-header bg-primary text-white" id="frmHeaderEdit" style=" font-size: 1rem; ">
                Chỉnh sửa
            </div>
            <div class="card-body card-custom">
                <form id="formEdit" class="form-valide" action="#" method="post" style="margin-top: 20px;">
                    <input type="hidden" id="IdEdit" name="IdEdit" value="0" />
                    <div class="row">
                        <div class="col-md-12 row mb-3">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="NameEdit" class="col-form-label">1 <span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control required" id="nameEdit" name="nameEdit">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="StatusEdit" class="col-form-label">2</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control" id="StatusEdit" name="StatusEdit">
                                            <option value="1">3</option>
                                            <option value="0">4</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 row mb-3">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label for="DescriptionEdit" class="col-form-label">Mô tả</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="DescriptionEdit" name="DescriptionEdit">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 row" style="display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start; width: 100%;">
                            <div style="width: 50%; display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start;">
                                <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                    <button type="button" class="btn btn-info" style="width: 100%" onclick="submitEdit();">Lưu</button>
                                </div>
                                <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                    <button type="button" class="btn btn-outline" style="width:100%" onclick="openView(0,0)">Trở lại</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @*<script src="~/js/constant.js" asp-append-version="true"></script>*@
    @*<script src="~/js/jsApp/systemunittype.js" type="text/javascript" asp-append-version="true"></script>*@
    <script src="~/js/jsApp/usertype.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/common.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/constant.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/api.js" type="text/javascript" asp-append-version="true"></script>
